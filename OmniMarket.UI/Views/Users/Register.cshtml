@using OmniMarket.Web.ViewModels
@model RegisterViewModel

@{
    ViewData["Title"] = "ثبت‌نام";
    Layout = null;
}

<!DOCTYPE html>
<html lang="fa">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/style.css" />
</head>
<body>
    <div class="container">
        <div class="register-box">
            <div class="illustration">
                <img src="~/images/2206.q713.011.F.m012.c7.people top view flat.jpg" alt="گروه افراد برای ثبت‌نام">
            </div>
            <div class="form-content">
                <h1>ثبت‌نام کنید!</h1>
                <p>حساب کاربری جدید بسازید</p>

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <p>@error.ErrorMessage</p>
                        }
                    </div>
                }

                <form asp-action="Register" asp-controller="Users" method="post">
                    <div class="input-group">
                        <label asp-for="FirstName">نام</label>
                        <input asp-for="FirstName" placeholder="نام خود را وارد کنید" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>

                    <div class="input-group">
                        <label asp-for="LastName">نام خانوادگی</label>
                        <input asp-for="LastName" placeholder="نام خانوادگی خود را وارد کنید" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>

                    <div class="input-group">
                        <label asp-for="Email">ایمیل</label>
                        <input asp-for="Email" placeholder="ایمیل خود را وارد کنید" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="input-group">
                        <label asp-for="Username">نام کاربری</label>
                        <input asp-for="Username" placeholder="نام کاربری خود را وارد کنید" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div class="input-group">
                        <label asp-for="Password">رمز عبور</label>
                        <input asp-for="Password" placeholder="رمز عبور خود را وارد کنید" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="input-group">
                        <label asp-for="ConfirmPassword">تأیید رمز عبور</label>
                        <input asp-for="ConfirmPassword" placeholder="رمز عبور خود را دوباره وارد کنید" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <button type="submit" class="register-btn">ثبت‌نام</button>

                    <div class="signup">
                        <span>حساب کاربری دارید؟</span>
                        <a asp-action="Login" asp-controller="Users" asp-route-returnUrl="@ViewData["ReturnUrl"]" class="signup-link">وارد شوید</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>